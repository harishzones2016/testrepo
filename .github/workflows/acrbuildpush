name: Build and Push Docker Image

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build-and-push:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2

    - name: Log in to Azure Container Registry
      uses: docker/login-action@v2
      with:
        registry: matarani.azurecr.io
        username: ${{ secrets.DOCKER_USERNAME1 }}
        password: ${{ secrets.DOCKER_PASSWORD1 }}

    - name: Build Docker image
      run: |
        docker build --file ./Docker/Dockerfile -t acr42001.azurecr.io.azurecr.io/nginx:${{ github.run_number }} .

    - name: Push Docker image
      run: |
        docker push acr42001.azurecr.io.azurecr.io/nginx:${{ github.run_number }}
